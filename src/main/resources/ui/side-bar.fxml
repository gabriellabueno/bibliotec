<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox prefWidth="220.0" styleClass="sidebar"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="br.edu.fatecgru.controller.SideBarController">

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="220.0" spacing="5.0">
            <children>
                <ImageView fitHeight="40.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/bibliotec_logo.png" />
                    </image>
                </ImageView>
                <Label text="Bibliotec" styleClass="logo-text" />
            </children>
            <padding>
                <Insets left="20.0" />
            </padding>
        </HBox>

        <Button mnemonicParsing="false"   onAction="#onHomeClick"  prefHeight="40.0" maxWidth="Infinity" text="Home" styleClass="nav-button, nav-active">
            <graphic>
                <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                    <image>
                        <Image url="@../icons/home_icon.png"/>
                    </image>
                </ImageView>
            </graphic>
            <VBox.margin>
                <Insets bottom="10.0" left="15.0" right="15.0" top="20.0" />
            </VBox.margin>
        </Button>

        <VBox styleClass="nav-section" maxWidth="Infinity">
            <Label text="Pesquisa" styleClass="section-header">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/search_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Label>

            <Button mnemonicParsing="false"  onAction="#onSearchMaterialClick"  prefHeight="30.0" maxWidth="Infinity" text="Material" styleClass="nav-item-button">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/material_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button mnemonicParsing="false"   onAction="#onSearchUserClick"  prefHeight="30.0" maxWidth="Infinity" text="Usuário" styleClass="nav-item-button">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/user_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <VBox.margin>
                <Insets bottom="10.0" left="15.0" right="15.0" />
            </VBox.margin>
        </VBox>

        <VBox styleClass="nav-section" maxWidth="Infinity">
            <Label text="Cadastrar" styleClass="section-header">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/add_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Label>

            <Button mnemonicParsing="false" onAction="#onRegisterMaterialClick" prefHeight="30.0" maxWidth="Infinity" text="Material" styleClass="nav-item-button">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/material_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button mnemonicParsing="false"  onAction="#onRegisterNoteClick"   prefHeight="30.0" maxWidth="Infinity" text="Nota Fiscal" styleClass="nav-item-button">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/note_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button mnemonicParsing="false"  onAction="#onRegisterLoanClick" prefHeight="30.0" maxWidth="Infinity" text="Empréstimo" styleClass="nav-item-button">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/loan_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button mnemonicParsing="false"  onAction="#onRegisterUserClick" prefHeight="30.0" maxWidth="Infinity" text="Usuário" styleClass="nav-item-button">
                <graphic>
                    <ImageView fitHeight="18.0" fitWidth="18.0" preserveRatio="true">
                        <image>
                            <Image url="@../icons/user_icon.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <VBox.margin>
                <Insets bottom="10.0" left="15.0" right="15.0" />
            </VBox.margin>
        </VBox>

        <VBox VBox.vgrow="ALWAYS" />

        <VBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="220.0">
            <children>
                <ImageView fitHeight="100.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="/images/fatec_logo.png" />
                    </image>
                </ImageView>

                <VBox prefHeight="25.0" prefWidth="100.0" styleClass="developer-info">
                    <children>
                        <Label text="Desenvolvido por" styleClass="developer-label" />
                        <Label text="Gabriella Bueno e Sara Robles" styleClass="developer-names" />
                    </children>
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="25.0" />
            </padding>
        </VBox>
    </children>
</VBox>